    }
  }

  @keyframes float3 {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-12px);
    }
  }

  .floating-icon-1 {
    animation: float1 4s ease-in-out infinite;
  }

  .floating-icon-2 {
    animation: float2 5s ease-in-out infinite 1s;
  }

  .floating-icon-3 {
    animation: float3 6s ease-in-out infinite 0.5s;
  }
</style>
