---
import { Image } from 'astro:assets';

interface Props {
  id: string;
  title: string;
  description: string;
  detailImage?: ImageMetadata;
  galleryImages?: ImageMetadata[];
  youtubeUrl?: string;
  role: string;
  links: Array<{ label: string; url: string }>;
}

const { id, title, description, detailImage, galleryImages = [], youtubeUrl, role, links } = Astro.props;
---
<div
  id={id}
  class="modal fixed inset-0 z-[100] hidden items-center justify-center bg-black/80 backdrop-blur-md p-4"
>
  <div class="relative bg-[var(--component-bg)] border border-[var(--white-icon-tr)] rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto shadow-2xl">
    <button class="modal-close absolute top-4 right-4 z-10 p-2 rounded-full bg-[var(--border)] hover:bg-[var(--sec)] text-[var(--white)] transition-colors" aria-label="Close">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <div class="w-full aspect-video bg-[var(--background)] rounded-t-2xl overflow-hidden">
      {youtubeUrl ? (
        <iframe src={youtubeUrl} class="w-full h-full" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen />
      ) : detailImage ? (
        <Image src={detailImage} alt={title} width={640} height={360} class="w-full h-full object-contain" />
      ) : null}
    </div>

    <div class="p-6">
      <h2 class="text-2xl font-bold text-[var(--white)] mb-2">{title}</h2>
      <p class="text-[var(--white-icon)] mb-4 whitespace-pre-line leading-relaxed">{description}</p>
      <div class="mb-4">
        <span class="text-sm font-medium text-[var(--sec)]">Role</span>
        <p class="text-sm text-[var(--white)] mt-1">{role}</p>
      </div>
      {galleryImages.length > 0 && (
        <div class="mb-4">
          <span class="text-sm font-medium text-[var(--sec)]">Screenshots</span>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mt-2">
            {galleryImages.map((image, index) => (
              <div class="rounded-xl overflow-hidden bg-[var(--background)] border border-[var(--white-icon-tr)]">
                <Image src={image} alt={`${title} screenshot ${index + 1}`} width={480} height={270} class="w-full h-auto object-contain" />
              </div>
            ))}
          </div>
        </div>
      )}
      {links && links.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {links.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-sm px-4 py-2 rounded-lg bg-[var(--border)] text-[var(--white)] hover:bg-[var(--sec)] hover:text-white transition-all duration-200">
              {link.label}
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</div>
